<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="UXDivers.Artina.Grial.ProductItemViewPage"
	xmlns:sample="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial" 
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared" 
    
	Title="{Binding Name}">


	 <!--MAIN CONTEINER GRID-->
	<Grid VerticalOptions="Fill">
		<Grid.RowDefinitions>
			<RowDefinition Height="30*" />
			<RowDefinition Height="70*" />

		</Grid.RowDefinitions>

		<!--PRODUCT IMAGE-->
		<Image 
			Grid.Row="0"
			Source="{Binding Image}" 
			Aspect="AspectFit" >
			<Image.GestureRecognizers>
				<TapGestureRecognizer Tapped="OnImageTapped" />
			</Image.GestureRecognizers>
		</Image>

			<!-- PRODUCT INFO -->
			<StackLayout Grid.Row="1">

				<!---TOOLBAR -->
				<StackLayout
					BackgroundColor="#f9f9f9" 
					TranslationY="-6">

					<Grid 
						HeightRequest="30"
						Padding="20,6,20,10" 
						RowSpacing="0" 
						ColumnSpacing="0">

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="50*"/>
							<ColumnDefinition Width="50*"/>
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition Height="40"/>
						</Grid.RowDefinitions> 

						<StackLayout 
							Orientation="Horizontal" 
							HorizontalOptions="Start" 
							VerticalOptions="Center">

							<Label 
								Text="Consultations" 
								FontSize ="16"
								TextColor ="{StaticResource AccentColor}"
								FontAttributes="Bold"
							/>

					
						</StackLayout>

						<Label VerticalOptions="Center" FontSize="14" HorizontalOptions="End" Grid.Column="1" Grid.Row="0">
							<Label.FormattedText> 
								<FormattedString>
								<FormattedString.Spans>
									<Span Text="&#xf06e; " ForegroundColor="{StaticResource AccentColor}" FontFamily="{x:Static artina:FontAwesome.FontName}" />
								</FormattedString.Spans>
								</FormattedString>
							</Label.FormattedText>
						</Label>

					</Grid>

					<BoxView Style="{StaticResource Horizontal1ptLineStyle}" VerticalOptions="End"/>

				</StackLayout>

				<!---DESCRIPTION -->
				
				<StackLayout Padding="0,0,0,0" >
					
                    <ListView BackgroundColor="White"
                          
                            RowHeight="66" 
                            x:Name="ConsultationsList"
                             >

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <sample:FriendItemTemplate />
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

				</StackLayout>

			</StackLayout>

		
		</Grid>	

</ContentPage>